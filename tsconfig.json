{
  "compilerOptions": {
    "baseUrl": ".",
    // "target": "es6",
    // "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "incremental": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "commonjs",
    // "module": "ESNext",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Styles/*": ["src/styles/*"],
      "src/*": ["src/*"],
      "@myproject/*": ["pub1/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "t"]
}
